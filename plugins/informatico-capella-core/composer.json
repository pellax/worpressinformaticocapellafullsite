{
    "name": "informatico-capella/core-plugin",
    "description": "Plugin core para Informático Capella con arquitectura limpia, SOLID y TDD",
    "type": "wordpress-plugin",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Pellax (Informático Capella)",
            "email": "admin@informaticocapella.local"
        }
    ],
    "minimum-stability": "stable",
    "prefer-stable": true,
    "require": {
        "php": ">=8.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0",
        "mockery/mockery": "^1.6",
        "phpstan/phpstan": "^2.0",
        "squizlabs/php_codesniffer": "^3.10",
        "wp-coding-standards/wpcs": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "InformaticoCapella\\Domain\\": "src/Domain/",
            "InformaticoCapella\\Application\\": "src/Application/",
            "InformaticoCapella\\Infrastructure\\": "src/Infrastructure/",
            "InformaticoCapella\\Presentation\\": "src/Presentation/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "InformaticoCapella\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test:unit": "phpunit --testsuite=Unit",
        "test:integration": "phpunit --testsuite=Integration",
        "test:coverage": "phpunit --coverage-html coverage",
        "analyse": "phpstan analyse src tests --level=8",
        "cs:check": "phpcs --standard=WordPress src",
        "cs:fix": "phpcbf --standard=WordPress src"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
